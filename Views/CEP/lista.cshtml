@model IEnumerable<_01_Controller.Models.CEPViewModel>
@{
    ViewData["Title"] = "Lista de CEPs";
}

<div class="text-center">
    <h1 class="display-4">Lista de CEPs </h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>CEP</td>
                <td>Logradouro</td>
                <td>Bairro</td>
                <td>Cidade</td>
                <td>Estado</td>
            </tr>
        </thead>
        <tbody>
            @foreach (CEPViewModel cvm in Model)
            {
                <tr>
                    <td>@cvm.CEP</td>
                    <td>@cvm.Logradouro</td>
                    <td>@cvm.Bairro</td>
                    <td>@cvm.Cidade</td>
                    <td>@cvm.Estado</td>
                    <td>
                        <a class="btn btn-warning mx-2" asp-controller="CEP" asp-action="Editar"
                            asp-route-id="@cvm.CEP">Editar</a>
                        <a class="btn btn-danger mx-2" asp-controller="CEP" asp-action="Excluir"
                            asp-route-id="@cvm.CEP">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
